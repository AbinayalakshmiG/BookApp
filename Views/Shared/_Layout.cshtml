<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - BookApp</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          rel="stylesheet" />

    <!-- Your custom CSS -->
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
          rel="stylesheet"
          integrity="sha512-…"
          crossorigin="anonymous" />
</head>
<body>
    <!-- full-width light navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <!-- centered content -->
            <div class="container">
                <a class="navbar-brand" asp-controller="Books" asp-action="Index">BookApp</a>
                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" asp-action="Index">All Books</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Create">Add Book</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Search">Search</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="Analytics">Analytics</a></li>
                        <li class="nav-item"><a class="nav-link" asp-action="About">About Us</a></li>
                    </ul>

                    @if (User.Identity!.IsAuthenticated)
                    {
                        <span class="navbar-text me-3">
                            Hello, @User.Identity.Name!
                        </span>
                        <form asp-controller="Account"
                              asp-action="Logout"
                              method="post"
                              class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-secondary btn-sm">
                                Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a class="btn btn-outline-primary btn-sm"
                           asp-controller="Account"
                           asp-action="Login">
                            Login
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    @* Optional: if you still want a separate banner below the nav,
     uncomment this block—but it’s redundant with the inline greeting above *@
